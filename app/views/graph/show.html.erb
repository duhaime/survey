<% content_for :header do -%>
  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= javascript_include_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag 'home' %>
  <%= stylesheet_link_tag 'scaffolds' %>
  <%= javascript_include_tag 'graph' %>
  <%= stylesheet_link_tag 'graph' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="graph">

        <% @search_id_and_phrase_array.each do |search_id_and_phrase| %>
          <% label_id = "label" + search_id_and_phrase[0].to_s %>
          <% graph_id = "search" + search_id_and_phrase[0].to_s %>
          <div id="<%= label_id %>" class="graph-label">
            <b>Search:</b>
            <%= search_id_and_phrase[1] %>
          </div>
          <div id="<%= graph_id %>" class="search-graph"></div>
        <% end %>
        
        <svg id="graph"></svg>
      </div>
    </div>
  </div>
</div>