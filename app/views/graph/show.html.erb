<% content_for :header do -%>
  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= javascript_include_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag 'home' %>
  <%= stylesheet_link_tag 'scaffolds' %>
  <%= javascript_include_tag 'graph' %>
  <%= stylesheet_link_tag 'graph' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="graph">

        <% @search_phrase_array.each do |search_phrase| %>
          <% label_id = "label_" + search_phrase.gsub(".", "").split().join("_") %>
          <% graph_id = "search_" + search_phrase.gsub(".", "").split().join("_") %>
          <div id="<%= label_id %>" class="graph-label">
            <b>Search:</b>
            <%= search_phrase %>
          </div>
          <div id="<%= graph_id %>" class="search-graph"></div>
        <% end %>
        
        <svg id="graph"></svg>
      </div>
    </div>
  </div>
</div>