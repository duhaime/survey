<% content_for :header do -%>
  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= javascript_include_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag 'home' %>
  <%= stylesheet_link_tag 'scaffolds' %>
  <%= javascript_include_tag 'graph' %>
  <%= stylesheet_link_tag 'graph' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="graph">

        <% @search_labels.each_with_index do |search_label, search_label_index| %>
          <% label_id = "label" + (search_label_index + 1).to_s %>
          <% graph_id = "search" + (search_label_index + 1).to_s %>
          <div id="<%= label_id %>" class="graph-label">
            <b>Search:</b>
            <%= search_label %>
          </div>
          <div id="<%= graph_id %>" class="search-graph"></div>
        <% end %>
        
        <svg id="graph"></svg>
      </div>
    </div>
  </div>
</div>